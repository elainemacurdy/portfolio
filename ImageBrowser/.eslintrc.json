{
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [2, 4, { "SwitchCase": 1 }],
        "linebreak-style": [2, "unix"],
        "no-unused-vars": [1],
        "quotes": [2, "double"],
        "react/jsx-uses-react": 1,
        "react/jsx-uses-vars": 1,
        "semi": [2, "always"]
    }
}
